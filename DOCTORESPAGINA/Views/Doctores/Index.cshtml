@model IEnumerable<DOCTORESPAGINA.Models.Doctores>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table-bordered table-condensed table-hover table-striped table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Especialidades.NombreEsp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospitales.NombreHosp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreDoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoDoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacionDoc)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Especialidades.NombreEsp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hospitales.NombreHosp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreDoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoDoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCreacionDoc)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DoctoresID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DoctoresID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.DoctoresID })
                </td>
            </tr>
        }

    </table>
</div>