@model IEnumerable<DOCTORESPAGINA.Models.Especialidad>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table-bordered table-condensed table-hover table-striped table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEsp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacionEsp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoEsp)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreEsp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCreacionEsp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoEsp)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.EspecialidadID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.EspecialidadID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.EspecialidadID })
                </td>
            </tr>
        }

    </table>
</div>